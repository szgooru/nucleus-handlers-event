<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" target="System.out">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>nucleus-event.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>nucleus-event.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="TRANSMIT-ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
       <file>nucleus-event-failed-transmissions.log</file>
       <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
           <fileNamePattern>nucleus-event-failed-transmissions.%d{yyyy-MM-dd}.log</fileNamePattern>
           <!-- keep 30 days' worth of history -->
           <maxHistory>30</maxHistory>
       </rollingPolicy>
       <append>true</append>
       <encoder>
           <pattern>%msg%n</pattern>
       </encoder>
   </appender>
    
    <logger name="org.gooru.nucleus" level="debug">
           
    </logger>

    <logger name="org.gooru.nucleus.transmission-errors" level="debug">
        <appender-ref ref="TRANSMIT-ERRORS" />
    </logger>
    
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>